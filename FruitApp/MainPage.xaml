<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FruitApp.MainPage">

    <ListView x:Name="FruitListView"
          HasUnevenRows="true"
          ItemSelected="FruitListView_ItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Horizontal" Margin="20" Padding="10">
                        <Image Source="{Binding Image}" HeightRequest="60" WidthRequest="60" Margin="10"/>
                        <Label Text="{Binding Name}" FontSize="24"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</ContentPage>
