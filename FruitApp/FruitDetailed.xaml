<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FruitApp.FruitDetailed">
    <Grid RowDefinitions="Auto, Auto, *">
        <!-- 放置您的 UI 元素 -->
        <Image Grid.Row="0" x:Name="fruitImg" HeightRequest="500"/>
        <Label Grid.Row="1" x:Name="fruitName" FontSize="24"/>
        <Label Grid.Row="2" x:Name="fruitDescription" FontSize="18"/>
    </Grid>
</ContentPage>
